{
  "Serilog": {
    "MinimumLevel": "Information",
    "Override": {
      "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning"
    },
    "WriteTo": [
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://loki:3100",
          "labels": [
            {
              "key": "service",
              "value": "order-service"
            },
            {
              "key": "env",
              "value": "production"
            }
          ]
        }
      },
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  },
  "Resilience": {
    "Enabled": true
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=shop-postgresql;Database=shop;Username=postgres;Password=adminpass"
  },
  "AllowedHosts": "*",
  "ServiceUrls": {
    "Inventory": "http://localhost:5002",
    "Payment": "http://localhost:5003",
    "RabbitMQ": {
      "HostName": "localhost"
    }
  }
}
